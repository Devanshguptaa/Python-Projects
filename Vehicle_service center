x=input("Enter the Type of vehicle : ")
if x=="car":
    print(obj.car())
elif x=="bus":
    print(obj.bus())
elif x=="bike":
    print(obj.bike())
elif x=="scooty":
    print(obj.scooty())
elif x=="cycle":
    print(obj.cycle())
else:
    print("wrong option: \nplease again choose the right option:")
