class service_center:
    def center_details(rp):
        print("\t\t\t\t HONDA SERVICE CENTER")
        print("\t\t\t\t Since-1997")
        print("\t\t\t\t www.Servicebuddy.com")
        print("\n\n\t\t\t\t\tMENU")
    def menu(rp):
        x=["car","bus","bike","scooty","cycle"]
        for k in x:
            print("\n\n",k)
    def car(rp):
        x=["full service","gear box","Ac service","breaks"]
        y=[800,500,350,650]
        car_={"Service types":x,"price":y}
        import pandas as pd
        df=pd.DataFrame(car_)
        print("\n\nServive type \n\n")
        print(df)
        d=[]
        while x:
            x=True
            b=int(input("Enter the value position : "))
            c=int(input("Enter the times:"))
            z=car_["price"][b]
            y=z*c
            d.append(y)
            x=input("you want any other service(yes/no):")
            if(x=="no"):
                print("thank you")
                break
        t=sum(d)
        m=(sum(d)*0.05)
        k=t+m
        print("servicetax = 5%")
        print("Total Amount:",t,"Rupees")
        print("Total Amount Including Service Tax:",k,"Rupees")
        
    def bus(rp):
